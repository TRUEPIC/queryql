{
  "root": true,
  "env": {
    "node": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "extends": ["eslint:recommended", "plugin:node/recommended", "prettier"],
  "rules": {
    "node/no-unpublished-require": [
      "error",
      {
        "allowModules": ["knex"]
      }
    ]
  },
  "overrides": [
    {
      "files": ["./src/**/*.test.js"],
      "env": {
        "jest/globals": true
      },
      "plugins": ["jest"],
      "extends": ["plugin:jest/recommended", "plugin:jest/style"]
    }
  ]
}
